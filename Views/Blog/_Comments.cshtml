@model MvcNet.Models.PostModel

<div class="mt-3">
    <h5>Comments</h5>
    @* Start Comment List *@
    @foreach (PostCommentModel c in Model.comments)
    {
        <div class="card">
            <div class="card-body">
            @c.name <br/>
            @c.content <br/>
            </div>
        </div>
    }
    @* End Comment List *@

    @* Form Add Comment *@

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success"> <span class="closebtn" onclick="this.parentElement.style.display='none';"> Ã— </span> @TempData["message"] </div>
    }

    <form method="post" asp-action="Comment" asp-controller="Home" asp-route-id="@Model.id">
        <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name">
        </div>
        <br/>

        <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email">
        </div>
        <br/>

        <div class="form-group">
        <label>Comment</label>
        <textarea name="content" class="form-control"></textarea>
        </div>
        <br/>
        <button class="btn btn-success" type="submit">Comment</button>
    </form>
    @* End Form Add Comment *@
</div>