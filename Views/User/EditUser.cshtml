@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Edit User " + Model.UserName;
}
<h1>@ViewData["Title"]</h1>

<form asp-action="EditPassword" asp-controller="User" asp-route-id="@Model.Id">
<div class="form-group">
    <label>New Password</label>
    <input type="password" name="newpass" class="form-control">
</div>
<div class="form-group">
    <label>Confirm New Password</label>
    <input type="password" name="confirm-newpass" class="form-control">
</div>
<button class="btn btn-primary">Update Password</button>
</form>
